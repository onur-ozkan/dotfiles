#!/bin/sh

function enable_cursor() {
    tput cnorm
}

clear

tput civis
trap enable_cursor EXIT

counter=-1
icons=""
now=$((`date +%s` + $1));

while [ "$now" -ge `date +%s` ]; do
	if [ $counter = 9 ]; then
		counter=-1
	fi
    echo -ne "${icons:((counter=counter+1)):1} $(date -u --date @$(($now - `date +%s` )) +%H:%M:%S)\r";
	sleep 0.25
done

