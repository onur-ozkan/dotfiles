#!/bin/sh

cache_file=/home/nimda/.cache/.sbs
backgrounds_dir=/home/nimda/.backgrounds

if [ ! -e "$cache_file" ] ; then
    printf "NULL" > "$cache_file"
fi

current_bg=$(head -1 /home/nimda/.cache/.sbs)
first_bg=$(ls -a -p /home/nimda/.backgrounds | grep -v / | head -1)

if [ "$current_bg" == NULL ]
then
	sed -i "1s/^.*$/$first_bg/" $cache_file
else
	next_bg=$(ls -a -p /home/nimda/.backgrounds | grep -v / | grep -A1 $current_bg | tail -n 1)
	if [ "$current_bg" == "$next_bg" ]
	then
		sed -i "1s/^.*$/$first_bg/" $cache_file
	else
		sed -i "1s/^.*$/$next_bg/" $cache_file
	fi
fi

sbs /home/nimda/.backgrounds/$current_bg
