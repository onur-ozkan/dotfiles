#!/bin/bash

vol=$(pactl list sinks | tr ' ' '\n' | grep -m1 '%' | tr -d '%')
vol_status=$(pactl list sinks | grep 'Mute: yes')

if [ -n $vol_status ]
then
        vol_icon=" "
elif [ ${vol::-1} -eq 0 ]
then
        vol_icon=" "
elif [ ${vol::-1} -lt 50 ]
then
        vol_icon=" "
else
        vol_icon=" "
fi

printf "$vol_icon^c#f7ca88^$vol%%^d^"
